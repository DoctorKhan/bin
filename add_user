if (( $# < 0 )) || [[ "$1" == --help ]]; then echo
sed -n "/^# Usa/,/^##*$/p" $0 | tr -d "#"; exit 0; fi
#########################################################

## Initialize

## Functions

## Main
sudo useradd -m -s /usr/bin/zsh $1
sudo passwd $1
sudo passwd -e $1
